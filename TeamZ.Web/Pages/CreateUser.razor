@inject TeamZ.Web.APIService apiService
@inject NavigationManager NavManager
@using TeamZ.Web.FormModels
@page "/createuser"

<h1>Register User</h1>

<EditForm Model="@userModel" OnValidSubmit="@Submit">
    <DataAnnotationsValidator />
    <label>
        Username:
    </label>
    <p>
        <InputText id="username" @bind-Value="userModel.Username" />
    </p>
    <label>
        Password:
    </label>
    <p>
        <InputText type="password" id="password" @bind-Value="userModel.Password" />
    </p>
    <button type="submit">Create User</button>
</EditForm>
@if (!createSucceeded)
{
    <p style="color: red">A problem happened when creating the user</p>
}

@code {
    private UserModel userModel = new UserModel();
    private bool createSucceeded = true;

    private async void Submit()
    {
        try
        {
            createSucceeded = await apiService.PostCreateUserAsync(userModel.Username, userModel.Password);
        }
        catch (Exception e)
        {
            createSucceeded = false;
            Console.WriteLine("Error:", e);
        }

        if (createSucceeded)
        {
            NavManager.NavigateTo("/");
        }
    }
}

